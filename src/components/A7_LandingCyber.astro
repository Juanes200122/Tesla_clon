---
import LogoCybertruck from "./LogoCybertruck.astro"
---
<section class="landing-section bg-black h-screen w-screen text-center relative overflow-hidden" data-header-color="black" id="Cybertruck">
    <div class="z-30 relative h-full flex flex-col">
        <header class="flex justify-center pt-40">
            <div style="width: 500px;">
                <LogoCybertruck />
            </div>                       
        </header>
        <footer class="flex flex-col flex-grow justify-end pb-20 items-center">
            <div class="flex flex-row flex-wrap justify-center gap-2">
                <a class="h-[42px] border-[3px] border-pink-300 bg-pink-300 text-sm rounded font-medium text-white px-12 py-2 inline-block w-max" href="#">Ordenar ahora</a>
                <a class="h-[42px] border-[3px] border-white bg-white text-sm rounded font-medium text-black px-12 py- w-max inline-flex justify-center items-center" href="#">Pruebas de manejo</a>
            </div>
        </footer>
    </div>

    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <img src="/CyberTruck/Homepage-Cybertruck-Desktop.jpg" alt="Model Y" class="h-full w-full object-cover object-center"/>
    </div>
</section>